# -*- mode: ruby -*-
# vi: set ft=ruby :

ENV['VAGRANT_DEFAULT_PROVIDER'] = 'docker'

Vagrant.configure("2") do |config|

  config.vm.define "my-little-container" do |m|

  m.vm.provider :docker do |d|
      d.name = 'my-little-container'
      d.build_dir = "."
      d.remains_running = true
      d.force_host_vm = true
      d.has_ssh = true
      d.dockerfile = "vagrant/provider_support/docker/dockerfiles/debian_vagrant"
      d.vagrant_machine = "docker_host"
      d.vagrant_vagrantfile = "vagrant/host_vms/docker_host"
    end
  end
  config.vm.hostname = VM_NAME
end
